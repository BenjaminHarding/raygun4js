{
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "setupFiles": [      
      "<rootDir>/src/tests/setup.ts"
    ],
    "testEnvironment": "jsdom",
    "roots":  [
      "<rootDir>/src/"
    ],
    "testRegex": "(\\.|/)(spec)\\.ts$",
    "globals": {},
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
  